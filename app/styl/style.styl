@import 'vendor.styl'
@import 'mixins.styl'

color_green=#76c04d
color_green2=#00A859
color_gray =#E6E7E9
color_brow =#606062
color_facebook=#1E48AA
color_twitter=#01A1D1
color_base=#e6e7e8
color_red=#ED3237
/************ RESET **************/
*
	box-sizing border-box
	&:before,&:after
		box-sizing border-box


body
	color #3f3f41
a 
	text-decoration none
h1,h2,h3,h4,h5,h6
	margin 0
blockquote
	padding 0
/********************* HELPERS *************/
.ie-message
	background-color orange
	text-align center 
	width 700px
	margin 5px auto
	padding 2px
	color white
	font-size 15px
html.lt-ie8 .row 
	clear both
.bck-header
	background: #80c64a /* Old browsers */
	background: -moz-linear-gradient(top, #80c64a 0%, #aad045 100%) /* FF3.6+ */
	background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#80c64a), color-stop(100%,#aad045)) /* Chrome,Safari4+ */
	background: -webkit-linear-gradient(top, #80c64a 0%,#aad045 100%) /* Chrome10+,Safari5.1+ */
	background: -o-linear-gradient(top, #80c64a 0%,#aad045 100%) /* Opera 11.10+ */
	background: -ms-linear-gradient(top, #80c64a 0%,#aad045 100%) /* IE10+ */
	background: linear-gradient(to bottom, #80c64a 0%,#aad045 100%) /* W3C */
.bck-white
	background-color #ffffff
.bck-green
	background-color color_green2
.bck-base
	background-color color_base
.radius
	border-radius 20px
.text-justify
	text-align justify
.text-center
	text-align center
.text-right
	text-align right
.text-small
	font-size 12px
.border 
	border 1px solid rgba(0, 0, 0, .3)
.padding
	padding 15px 40px
.padding-left
	padding-left 15px	
.margin-top
	margin-top 10px
.margin-bottom
	margin-bottom 10px
.img-responsive
	max-width 100%
	html.lt-ie9 &
		max-width none
		width 100%
.color-purple
	color #662c90
.color-green
	color color_green
.color-green2
	color color_green2
.display-block
	display block
.display-none
	display none
/*********************** GRID ******************/
.container
	width 1100px
	block-center()
	clearfix() 
.row
	clearfix() 
/****************** IMAGES **************/
.figure-producto
	position: relative
	padding 30px
	& img 
		border-radius 15px
		border 4px solid color_green
		transition: all 0.2s ease
		cursor pointer
	& h3
		color lighten(black,60%)
		transition: all 0.2s ease
		cursor pointer
	&:hover
		& h3
			color black
		& img 
			border 4px solid color_green2
	&.galeria
		padding 2px 20px
		& img
			border-radius 0
			border none
.img-logo
	position relative
	top -20px
	border-radius 10px
	border 3px solid white
	transition: all 0.2s ease
	&:hover
		transform scale(1.1)
.img-aside
	block-center()
	margin-top 10px
	&.logo
		margin-top 40px
		width 35%
	&.picture
		border-radius 10px 
		border 2px solid darken(color_gray,10%)
.img-pic
	border-radius 50%
	border 13px solid white
	box-shadow 0 0 15px 10px rgba(0, 0, 0,.1)
/************** NAVIGATION ****************/
.trazo
	display block
	border none
	background-image url('../images/bg-hr.png')
	height 147px
	position: absolute
	top: 202px
	background-repeat: no-repeat
	z-index: 2
	pointer-events none
	.lt-ie9 &
		display none
/***************** USED ************/
.slider
	& h3
		color color_red
		margin-bottom 10px
	& .button
		border-top 1px solid #333
		color color_red
		border-radius 0
		padding 5px
		float left
		margin-top 30px
	& .menu
		position: absolute
		top: 10px 
		right 10px
		width 25%
		border-bottom 1px solid #333
		& a , & span
			color color_red
		& a
			&:hover
				color #333
	& p 
		margin 0
		text-align justify
.img-inside
	float right
	margin 10px 0 10px 10px
.h150
	height 150px
.radius-small
	border-radius 10px
.bck-lines
	background-image url('../images/bg-lines.png')
	background-repeat repeat-x
	background-position center bottom
.position-circles
	position:  relative
	top 30px
	z-index: 2
.bck-alpes
	background-color #80c64a
.padding-slider
	padding 40px 40px 20px 20px
.padding-small
	padding 20px 20px 10px 20px
.padding-main
	padding 70px 0 10px 0
.shadow
	box-shadow 0 0 20px 5px rgba(0, 0, 0,.1)
.nav
	& a 
		display block
		float left
		transition: all 0.2s ease
	&.social
		padding-left 30px
		overflow hidden
		& a 
			margin-right 1%
			square(40px)
			& svg
				display block
				color white
				padding 5px
				border-radius 50%
				square(35px)
				border 1px solid white
			&.item-facebook svg
				background-color color_facebook
				fill :white
			&.item-twitter svg
				background-color color_twitter
				fill :white
	&.main 
		background-color color_green
		border-radius 0 0 30px 30px 
		padding 20px
		border-left 6px solid rgba(181, 213, 86, .7)
		border-right 6px solid rgba(181, 213, 86, .7)
		border-bottom 6px solid rgba(181, 213, 86, .7)
		& a 
			width 16%
			border-radius 5px
			text-align center 
			color white
			position: relative
			padding 5px 0
			margin 0 2%
			&:after
				content ""
				position: absolute
				display block
				top: 0
				right -15px
				height 28px
				border-right 1px solid rgba(255, 255, 255, .4)
				box-shadow -1px 0 1px rgba(0, 0, 0, .2)
			&:last-child
				&:after
					border-right none
					box-shadow none
			&.current
				background-color darken(color_green,15%)
			&:hover
				background-color darken(color_green,15%)
	&.navbar
		& a 
			float none
			border-radius 10px
			color white
			background-color color_gray
			color color_brow
			padding 7px 0 7px 20px 
			margin 10px 0
			font-weight bold
			position: relative
			&:hover
				background-color color_green
				color white
				&:after
					content ''
					display block
					position: absolute
					square(8px)
					border-right 8px solid transparent
					border-left 8px solid white
					border-top 8px solid transparent
					border-bottom 8px solid transparent
					top 9px 
					right 5px
			&.current
				background-color color_green
				color white
				&:after
					content ''
					display block
					position: absolute
					square(8px)
					border-right 8px solid transparent
					border-left 8px solid white
					border-top 8px solid transparent
					border-bottom 8px solid transparent
					top 9px 
					right 5px
/******************* APP ***************/
.padding-footer
	padding 0 20px
.margin-small
	margin 20px
.border-main
	border 2px dotted rgba(0, 0, 0, .2)
	margin 20px
.border-title
	padding-bottom 15px
	border-bottom 2px dotted color_green
#uno,#dos,#tres 
	display none
.star
	position: absolute
	left 0
input,textarea
	border 1px solid #a6a9ab
	border-radius 5px
	padding 5px
input
	&#nombre
		width 100%
		margin-bottom 5px
	&#email
		width 50%
		margin-bottom 5px
label
	display block
textarea
	width 100%
.button
	float right
	padding 10px 30px
	border none
	border-radius 5px
	color white